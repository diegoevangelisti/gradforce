<!DOCTYPE html>
<html lang="en">

<head>
  <div w3-include-html="/partials/head.html"></div>

  <script>
    function includeHTML() {
      var z, i, elmnt, file, xhttp;
      /* Loop through a collection of all HTML elements: */
      z = document.getElementsByTagName("*");
      for (i = 0; i < z.length; i++) {
        elmnt = z[i];
        /*search for elements with a certain atrribute:*/
        file = elmnt.getAttribute("w3-include-html");
        if (file) {
          /* Make an HTTP request using the attribute value as the file name: */
          xhttp = new XMLHttpRequest();
          xhttp.onreadystatechange = function () {
            if (this.readyState == 4) {
              if (this.status == 200) {
                elmnt.innerHTML = this.responseText;
              }
              if (this.status == 404) {
                elmnt.innerHTML = "Page not found.";
              }
              /* Remove the attribute, and call this function once more: */
              elmnt.removeAttribute("w3-include-html");
              includeHTML();
            }
          }
          xhttp.open("GET", file, true);
          xhttp.send();
          /* Exit the function: */
          return;
        }
      }
    }
  </script>
</head>

<body>
    <!-- <div w3-include-html="/partials/header.ejs"></div> -->
    <% include ./partials/header %>

  <main id="login-page">

    <h3 class="title-font mb10">Profile Page</h3>
    <p>Welcome <%= user.username %></p>
    <% if (user.photo) { %>
    <img style="max-width:300px; height: 300px;" src="<%= user.photo %>" alt="">
    <% } %>
    <p>User type: <%= user.userType %></p>
    <p>Name: <%= user.fname %></p>
    <p>Last Name: <%= user.lname %></p>
  </main>

  <div w3-include-html="/partials/footer.html"></div>

  <script>
    includeHTML();
  </script>
</body>

</html>